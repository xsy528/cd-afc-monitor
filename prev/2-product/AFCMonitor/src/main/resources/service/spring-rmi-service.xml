	<bean id="dailyTaskManagerServiceBean" class="org.springframework.remoting.rmi.RmiProxyFactoryBean"
		lazy-init="true">
		<property name="serviceUrl"
			value="rmi://${rmiTaskHostIpAddr}:${dailyClearRmiPort}/DailyTaskManagerService" />
		<property name="serviceInterface"
			value="com.insigma.afc.daily.service.IDaiyTaskManagerService" />
		<property name="lookupStubOnStartup" value="false"></property>
		<property name="refreshStubOnConnectFailure" value="true"></property>
	</bean>

	<bean id="rmiYKTFileOperationServiceBean" class="org.springframework.remoting.rmi.RmiProxyFactoryBean"
		lazy-init="true">
		<property name="serviceUrl"
			value="rmi://${rmiYKTHostIpAddr}:${fileOperationRmiPort}/YKTFileOperationService" />
		<property name="serviceInterface"
			value="com.insigma.afc.wz.daily.service.ykt.IYKTFileOperationService" />
