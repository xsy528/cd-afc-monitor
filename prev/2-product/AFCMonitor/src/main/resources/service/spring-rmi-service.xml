<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="rmiCommunicationRegister" class="org.springframework.remoting.rmi.RmiProxyFactoryBean"
		lazy-init="true">
		<property name="serviceUrl"
			value="rmi://${rmiHostIpAddr}:${communicationRegistRmiPort}/CommunicationRegisterService" />
		<property name="serviceInterface"
			value="com.insigma.afc.workbench.rmi.ICommunicationRegister" />
		<property name="lookupStubOnStartup" value="false"></property>
		<property name="refreshStubOnConnectFailure" value="true"></property>
	</bean>

	<bean id="rmiServiceBean" class="org.springframework.remoting.rmi.RmiProxyFactoryBean"
		lazy-init="true">
		<property name="serviceUrl"
			value="rmi://${rmiHostIpAddr}:${commandServiceRmiPort}/CommandService" />
		<property name="serviceInterface"
			value="com.insigma.afc.workbench.rmi.ICommandService" />
		<property name="lookupStubOnStartup" value="false"></property>
		<property name="refreshStubOnConnectFailure" value="true"></property>
	</bean>


