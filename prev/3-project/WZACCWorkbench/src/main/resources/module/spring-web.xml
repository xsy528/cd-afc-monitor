<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="handlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"></bean>

	<bean id="nodeController" name="/node/**" class="com.insigma.acc.wz.web.controller.NodeController">
		<constructor-arg index="0" ref="nodeService"/>
		<constructor-arg index="1" ref="fileService"/>
	</bean>

	<bean id="fileController" name="/file/**" class="com.insigma.acc.wz.web.controller.FileController">
		<constructor-arg index="0" ref="fileService"/>
	</bean>

	<bean id="nodeStatusController" name="/monitor/query/*" class="com.insigma.acc.wz.web.controller.NodeStatusController">
		<constructor-arg index="0" ref="metroNodeStatusService"/>
		<constructor-arg index="1" ref="wzmodeService"/>
		<constructor-arg index="2" ref="nodeStatusService"/>
	</bean>

	<bean id="nodeStatusService" class="com.insigma.acc.wz.web.service.impl.NodeStatusServiceImpl">
		<property name="commonDAO" ref="commonDAO"/>
	</bean>

	<bean id="nodeService" class="com.insigma.acc.wz.web.service.impl.NodeServiceImpl">
		<property name="fileService" ref="fileService"/>
	</bean>

	<bean id="fileService" class="com.insigma.acc.wz.web.service.impl.FileServiceImpl">
		<property name="resourceService" ref="resourceService"/>
		<property name="commonDAO" ref="commonDAO"/>
	</bean>

</beans>

